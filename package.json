{
  "name": "cpc-interpreter-extension",
  "displayName": "CAIE Pseudocode",
  "description": "A VSCode language support extension of CAIE PseudoCode",
  "version": "0.1.1",
  "publisher": "CreatechStudioShanghaiInc",
  "icon": "image/icon.png",
  "main": "src/extension.ts",
  "engines": {
    "vscode": "^1.83.0"
  },
  "activationEvents": [
    "onCommand:extension.activate"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iewnfod/CAIE-Code-Extension"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "cpc",
        "aliases": [
          "CAIE PseudoCode",
          "cpc"
        ],
        "extensions": [
          ".cpc"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./image/cpc.svg",
          "dark": "./image/cpc.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "cpc",
        "scopeName": "source.cpc",
        "path": "./syntaxes/cpc.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "cpc",
        "path": "./src/snippets.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "cpc"
      }
    ],
    "commands": [
      {
        "command": "cpc.run",
        "title": "Run Code",
        "icon": "$(play)"
      },
      {
        "command": "cpc.update",
        "title": "Update Runtime Support",
        "icon": "$(sync)"
      }
    ],
    "keybindings": [
      {
        "command": "cpc.run",
        "key": "f5",
        "mac": "f5",
        "when": "resourceLangId == cpc"
      },
      {
        "command": "cpc.update",
        "key": "f8",
        "mac": "f8",
        "when": "resourceLangId == cpc"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "cpc.run",
          "group": "navigation",
          "when": "resourceLangId == cpc"
        }
      ],
      "editor/title": [
        {
          "command": "cpc.update",
          "group": "navigation",
          "when": "resourceLangId == cpc"
        }
      ]
    },
    "configuration": [
      {
        "type": "object",
        "title": "CAIE PseudoCode Configuration",
        "properties": {
          "myCpcConfig.interpreterPath": {
            "type": "string",
            "default": "cpc",
            "description": "Path to the CPC interpreter. Restart after edit."
          },
          "myCpcConfig.updateBranch": {
            "type": "string",
            "enum": ["dev", "nightly", "stable"],
            "default": "stable",
            "description": "Select CPC update branch. Restart after edit."
          },
          "myCpcConfig.updateRemote": {
            "type": "string",
            "enum": ["github", "gitee"],
            "default": "github",
            "description": "Select CPC update remote repository. Restart after edit."
          },
          "myCpcConfig.devMode": {
            "type": "boolean",
            "description": "Enable CPC dev mode, which will enable some experimental features. Restart after edit."
          }
        }
      }
    ]
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "micromatch": "^4.0.5",
    "os": "^0.1.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/vscode": "^1.83.2",
    "vscode": "^1.1.37"
  }
}
