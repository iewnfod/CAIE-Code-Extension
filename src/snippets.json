{
    "For Loop": {
        "prefix": [
            "FOR"
        ],
        "body": [
            "FOR ${1:element} <- ${2:start} TO ${3:end}",
            "\t$0",
            "NEXT $1"
        ],
        "description": "A for loop."
    },
    "If": {
        "prefix": [
            "IF"
        ],
        "body": [
            "IF ${1:condition} THEN",
            "\t$0",
            "ENDIF"
        ],
        "description": "An if statement"
    },
    "For Loop With Step": {
        "prefix": [
            "FORSTEP"
        ],
        "body": [
            "FOR ${1:element} <- ${2:start} TO ${3:end} STEP ${4:step}",
            "\t$0",
            "NEXT $1"
        ],
        "description": "A for loop with step."
    },
    "While": {
        "prefix": [
            "WHILE"
        ],
        "body": [
            "WHILE ${1:condition} DO",
            "\t$0",
            "ENDWHILE"
        ],
        "description": "A while loop."
    },
    "Pass": {
        "prefix": [
            "PASS"
        ],
        "body": [
            "PASS"
        ],
        "description": "Do nothing."
    },
    "Case": {
        "prefix": [
            "CASE"
        ],
        "body": [
            "CASE OF ${1:identifier}",
            "\t${2:case} : ${3:statements};",
            "\tOTHERWISE : ${4:other case};",
            "ENDCASE"
        ],
        "description": "A case statement."
    },
    "Repeat": {
        "prefix": [
            "REPEAT"
        ],
        "body": [
            "REPEAT",
            "\t$0",
            "UNTIL ${1:condition}"
        ],
        "description": "A repeat-until loop."
    },
    "Declare": {
        "prefix": [
            "DECLARE"
        ],
        "body": [
            "DECLARE ${1:identifier} : ${2:type}"
        ],
        "description": "Declare a variable."
    },
    "Delete": {
        "prefix": [
            "DELETE"
        ],
        "body": [
            "DELETE ${1:identifier}"
        ],
        "description": "Delete a variable."
    },
    "Declare Array": {
        "prefix": [
            "DECLAREARRAY"
        ],
        "body": [
            "DECLARE ${1:identifier} : ARRAY[${3:dimensions}] OF ${2:type}"
        ],
        "description": "Declare an array."
    },
    "Output": {
        "prefix": [
            "OUTPUT"
        ],
        "body": [
            "OUTPUT ${1:expression}"
        ],
        "description": "Output something."
    },
    "Input": {
        "prefix": [
            "INPUT"
        ],
        "body": [
            "INTPUT ${1:identifier}"
        ],
        "description": "Input something."
    },
    "Call": {
        "prefix":[
            "CALL"
        ],
        "body": [
            "CALL ${1:procedure}(${2:arguments})"
        ],
        "description": "Call a procedure/function."
    },
    "Procedure": {
        "prefix": [
            "PROCEDURE"
        ],
        "body":[
            "PROCEDURE ${1:name}(${2:by} ${3:identifier} : ${4:type})",
            "\t$0",
            "ENDPROCEDURE"
        ],
        "description": "Declare a procedure."
    },
    "Function": {
        "prefix": [
            "FUNCTION"
        ],
        "body":[
            "FUNCTION ${1:name}(${2:by} ${3:identifier} : ${4:type}) RETURNS ${5:type}",
            "\t$0",
            "ENDFUNCTION"
        ],
        "description": "Declare a function."
    },
    "Open File": {
        "prefix": [
            "OPENFILE"
        ],
        "body": [
            "OPENFILE ${1:file path} FOR ${2:mode}"
        ],
        "description": "Open a file."
    },
    "Read File": {
        "prefix": [
            "READFILE"
        ],
        "body": [
            "READFILE ${1:file path}, ${2:identifier}"
        ],
        "description": "Read from a file."
    },
    "Write File": {
        "prefix": [
            "WRITEFILE"
        ],
        "body": [
            "WRITEFILE ${1:file path}, ${2:data}"
        ],
        "description": "Write to a file."
    },
    "Close File": {
        "prefix": [
            "CLOSEFILE"
        ],
        "body": [
            "CLOSEFILE ${1:file path}"
        ],
        "description": "Close a file."
    },
    "Seek File": {
        "prefix": [
            "SEEK"
        ],
        "body": [
            "SEEK ${1:file path}, ${2:address}"
        ],
        "description": "Seek a file."
    },
    "Class": {
        "prefix": [
            "CLASS"
        ],
        "body": [
            "CLASS ${1:name}",
            "PUBLIC PROCEDURE ${2:procedure}(${3:by} ${4:identifier} : ${5:type})",
            "ENDCLASS"
        ],
        "description": "Declare a class."
    },
    "Right": {
        "prefix": [
            "RIGHT"
        ],
        "body": [
            "RIGHT(${1:string}, ${2:length})"
        ],
        "description": "Get the right part of a string."
    },
    "Length": {
        "prefix": [
            "LENGTH"
        ],
        "body": [
            "LENGTH(${1:string})"
        ],
        "description": "Get the length of a string."
    },
    "Mid": {
        "prefix": [
            "MID"
        ],
        "body": [
            "MID(${1:string}, ${2:start}, ${3:length})"
        ],
        "description": "Get the middle part of a string."
    },
    "Lower Case": {
        "prefix": [
            "LCASE"
        ],
        "body": [
            "LCASE(${1:char})"
        ],
        "description": "Convert a character to lower case."
    },
    "Upper Case": {
        "prefix": [
            "UCASE"
        ],
        "body": [
            "UCASE(${1:char})"
        ],
        "description": "Convert a character to upper case."
    },
    "Change to Integer": {
        "prefix": [
            "INT"
        ],
        "body": [
            "INT(${1:real})"
        ],
        "description": "Change a real number to an integer."
    },
    "Random Real": {
        "prefix": [
            "RAND"
        ],
        "body": [
            "RAND(${1:upper int bound})"
        ],
        "description": "Generate a random real number in range."
    },
    "End of File": {
        "prefix": [
            "EOF"
        ],
        "body": [
            "EOF(${1:file path})"
        ],
        "description": "Check if the file is at the end."
    },
    "Power": {
        "prefix": [
            "POW"
        ],
        "body": [
            "POW(${1:base}, ${2:exponent})"
        ],
        "description": "Raise a number to a power."
    },
    "Exit Code": {
        "prefix": [
            "EXIT"
        ],
        "body": [
            "EXIT(${1:code})"
        ],
        "description": "Exit the program with a int code."
    },
    "Round": {
        "prefix": [
            "ROUND"
        ],
        "body": [
            "ROUND(${1:real}, ${2:decimal places})"
        ],
        "description": "Round a real number."
    },
    "Python": {
        "prefix": [
            "PYTHON"
        ],
        "body": [
            "PYTHON(\"${1:code}; _result=${2:result}\", ${3:variables})"
        ],
        "description": "Run python code."
    },
    "Import": {
        "prefix": [
            "IMPORT"
        ],
        "body": [
            "CONSTANT ${1:module name} = Import(\"${2:module path}\")"
        ],
        "description": "Import a module."
    },
    "Type": {
        "prefix": [
            "TYPE"
        ],
        "body": [
            "TYPE ${1:id}",
            "\t$0",
            "ENDTYPE"
        ],
        "description": "A type statement."
    },
    "Sort": {
        "prefix": [
            "Sort"
        ],
        "body": [
            "Sort(${1:array}, ${2:start index}, ${3:end index})"
        ],
        "description": "Build-in sort function."
    },
    "INTEGER": {
        "prefix": ["INTEGER"],
        "body": ["INTEGER"],
        "description": "INTEGER"
    },
    "REAL": {
