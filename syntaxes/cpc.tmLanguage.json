{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CAIE PseudoCode",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#declarations"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.cpc",
				"match": "\\b(if|while|for|return)\\b"
			},
			{
				"name": "keyword.declaration.cpc",
    			"match": "\\b(DECLARE)\\b"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.cpc",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cpc",
					"match": "\\\\."
				}
			]
		}
	},
	"declarations": {
		"name": "variable.declaration.cpc",
		"begin": "\\b(DECLARE)\\s+",
		"end": "\\s*:",
		"patterns": [
			{
				"include": "#variables"
			},
			{
				"include": "#data_types"
			}
		]
	},
	"variables": {
		"name": "variable.name.cpc",
		"match": "\\w+"
	},
	"data_types": {
		"name": "data_type.cpc",
		"match": "\\b(INTEGER|FLOAT|BOOLEAN)\\b"
	},
	"scopeName": "source.cpc"
}